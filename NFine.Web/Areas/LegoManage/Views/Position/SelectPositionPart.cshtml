@inherits System.Web.Mvc.WebViewPage
@{
    ViewBag.Title = "选择库存实板";
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}

 <script>
     $(function () {
         gridList();
        
     })
     function gridList() {
         var $gridList = $("#gridList");
         $gridList.dataGrid({
             url: "/LegoManage/Position/GetPostionPart?postionId="+getUrlParams("postionId"),
           //  url: "/LegoManage/Part/GetGridJson",
             height: $(window).height() - 128,
             colModel: [
                 { label: '主键', name: 'PartId', hidden: true },
                 { label: '模具编号', name: 'PartNo', width: 120, align: 'left' },
                 { label: '描述', name: 'PartDesc', width: 200, align: 'left' },
                 { label: '现存数量', name: 'Qty', width: 80, align: 'left' },
                  
                 { label: '库位名称', name: 'PositionName', width: 120, align: 'left' },
                 { label: '备注', name: 'remark', width: 200, align: 'left' },
             ],
             pager: "#gridPager",
             sortname: 'F_Id asc',
             viewrecords: true
         });
         $("#btn_search").click(function () {
             $gridList.jqGrid('setGridParam', {
                 postData: { keyword: $("#txt_keyword").val() },
             }).trigger('reloadGrid');
         });
     }
     function btn_Select()
     {
         var key = $("#gridList").jqGridRowValue().PartId;
         if (!key)
             $.modalAlert('请先选择一行数据!')
         else
         {
             parent.frames["Form"].$("#PartId").val(key);
             parent.frames["Form"].$("#PartId").trigger("change");
             //alert(key);
           
             $.modalClose();
         }
     }
     //得到url参数
     function getUrlParams(params) {
         var urlObj = {};
         if (!window.location.search) { return false; }
         var urlParams = window.location.search.substring(1);
         var urlArr = urlParams.split('&');
         for (var i = 0; i < urlArr.length; i++) {
             var urlArrItem = urlArr[i].split('=');
             urlObj[urlArrItem[0]] = urlArrItem[1]
         }
         // 判断是否有参数
         if (arguments.length >= 1) {
             return urlObj[params]
         }
         return urlObj;
     }
     //getUrlParams().ie;
     //getUrlParams('ie');

 </script>
<div class="topPanel">
    <div class="toolbar">
        <div class="btn-group">
            <a class="btn btn-primary" onclick="$.reload()"><span class="glyphicon glyphicon-refresh"></span></a>
        </div>
        <div class="btn-group">
            <a id="NF-add" authorize="yes" class="btn btn-primary dropdown-text" onclick="btn_Select()"><i class="fa fa-plus"></i>选择实板</a>
        </div>
      
        <script>$('.toolbar').authorizeButton()</script>
    </div>
    <div class="search">
        <table>
            <tr>
                <td>
                    <div class="input-group">
                        <input id="txt_keyword" type="text" class="form-control" placeholder="模具编号/.." style="width: 200px;">
                        <span class="input-group-btn">
                            <button id="btn_search" type="button" class="btn  btn-primary"><i class="fa fa-search"></i></button>
                        </span>
                    </div>
                </td>
            </tr>
        </table>
    </div>
</div>
<div class="gridPanel">
    <table id="gridList"></table>
    <div id="gridPager"></div>
</div>

